<p id="notice"><%= notice %></p>

<h1>Produtos</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Preco</th>
      <th>Image</th>
      <th>Vendedor</th>
      <th>Telefone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @produtos.each do |produto| %>
      <tr>
        <td><%= produto.nome %></td>
        <td><%= produto.preco %></td>
        <td><%= image_tag produto.image_url(:thumb) if produto.image.present? %></td>
        <td><%= produto.user.name %></td>
        <td><%= produto.user.tel %></td>
        <td><%= link_to 'Detalhes', produto %></td>
        <% if current_user == produto.user %>
        <td><%= link_to 'Editar', edit_produto_path(produto) %></td>
        <td><%= link_to 'Excluir', produto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="container"><div class="d-flex justify-content-center"><%= link_to 'Cadastre o seu produto!', new_produto_path, :class => 'lead font-weight-bold' %></div></div>
<div class="container"><div class="d-flex justify-content-center"><%= paginate @produtos %></div></div>